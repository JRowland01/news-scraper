<div class="container">
    <div class="header clearfix">

            <ul class="nav nav-pills float-left">
                <li class="nav-item">
                    <a class="nav-link link" href="/">Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link" href="/savedarticles" >Saved Articles</a>
                </li>
            </ul>   
   </div>

  {{!--Display the scraped titles, links, and article summaries in this section.--}}
  <div class="row">
    <h1><a href="{{result.link}}" target="_blank">{{result.title}}</a></h1>
    <p>{{result.articleSnippet}}</p>
  </div>
  <div class="row">
    <h2>Comments</h2>
  </div>
  {{!--If no comments exist then display the following text.--}}
  <div class="row">
    {{#unless result.note}}
    <p>There have been no comments posted.</p>
    {{/unless}}
  </div>
  {{!--Deletes comment posts from the user view and database.--}}
  <div class="row">
    <ul>
      {{#each result.note}}
      <li style="list-style: none">
        <h5>Name: {{this.name}} </h5>
        <p>Message: {{this.body}}</p>
        <button class="delete-button btn btn-secondary" data-comment="{{this._id}}">Delete Comment</button>
      </li>
      {{/each}}
    </ul>
    
  </div>
  <div class="row">
    <h2>Post a comment</h2>
  </div>
  {{!--Does a post method for the comments, allowing users to adds and save them to the db--}}
  <form method="POST" action="/articles/{{result._id}}">
    <div class="form-group row">
      <label for="name" class="col-form-label">Name</label>
      <input class="form-control" type="text" name="name" id="name" required>
    </div>
    <div class="form-group row">
      <label for="body">Message</label>
      <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
  <br>

</div>